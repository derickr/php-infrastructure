	--exclude include/jpgraph --exclude sqlite --exclude www/images/revcheck --exclude www/phd/docs \
	{{ rsync_address }}::docweb {{ doc_docroot }}/{{ doc_domain }}

/local/systems/update-docs-sources
/local/systems/update-docs-translation-status
/local/systems/update-phd-docs
